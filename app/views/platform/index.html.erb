<div class="flex items-center justify-center h-screen">
    <div class="w-1/2 mb-40 ml-20">
        <%= image_tag("/images/logo.png", :alt => "logo", :class => "h-auto w-3/4 mx-auto") %>
    </div>
    <div class="flex flex-col w-1/2 h-full">
        <%= render partial: "platform/welcome" %>
                <p class="text-purple text-4xl text-center font-bold mt-20 mb-16 w-3/4 self-center">¡ La mejor Cochinita Pibil de Xalapa !</p>
        <button class="transition bg-strong-pink border-strong-pink border-2 text-white self-center py-2 px-4 rounded-lg w-5/12 mb-6 hover:bg-transparent ease-in-out duration-300 hover:text-purple">
            <%= link_to new_user_session_path do %>
                <div class="flex items-center justify-center px-auto">
                    <p class="font-bold pr-1">Ordenar 1 kilo</p>
                    <%= image_tag("/images/right-arrow.svg", :alt => "logo", :class => "white-icon w-8 pl-1") %>
                </div>
            <% end  %>
        </button>
        
        <button class="border-purple text-purple border-2 self-center py-2 px-4 rounded-lg w-5/12">
                <div class="flex items-center justify-center px-auto">
                    <p class="font-bold pr-1">Ver menú</p>
                    <%= image_tag("/images/right-arrow.svg", :alt => "logo", :class => "pink-icon w-8 pl-1") %>
                </div>
            <% if user_signed_in? %>
                <%= link_to root_path do %>
                <% end  %>
            <% else %>
            <% end %>
        </button>
    </div>
</div>